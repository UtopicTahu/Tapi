{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}/src/tapi.cpp",
                "${workspaceFolder}/src/opencl/*.cpp",
                "${workspaceFolder}/src/opencl/*.h",
                "${workspaceFolder}/src/opengl/*.cpp",
                "${workspaceFolder}/src/opengl/*.h",
                "${workspaceFolder}/src/vulkan/*.cpp",
                "${workspaceFolder}/src/vulkan/*.h",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}